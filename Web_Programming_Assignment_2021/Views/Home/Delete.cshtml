@model Web_Programming_Assignment_2021.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div style="float:left; width:30%; margin: 10px 170px 10px 30px">
        <table style="text-align:justify">
            <tr>
                <th>Created:</th>
                <th>Modified:</th>
            </tr>
            <tr>
                <td> @Html.DisplayFor(model => model.DateCreated)</td>
                <td> @Html.DisplayFor(model => model.DateModified)</td>
            </tr>
            <tr>
                <th style="color:white">
                    .
                </th>
            </tr>
            <tr>
                <th colspan="2">
                    Comment:
                </th>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.DisplayFor(model => model.Comment)
                </td>
            </tr>
            <tr>
                <th style="color:white">
                    .
                </th>
            </tr>
            <tr>
                <th colspan="2">
                    Hastags:
                </th>
            </tr>

            <tr>
                <td colspan="2">
                    @foreach (var tag in Model.Hashtag.ToString().Split(' '))
                    {

                        <a href="/Home/HashtagGallery/@tag.Trim('#')">@tag</a>

                    }
                </td>
            </tr>
        </table>

    </div>
    <div style="float:left;">
        <img src="~/Catstagram/User/images/posts/@Model.PostId.ToString()/@Model.PhotoFile" style="width:450px" />
    </div>
</div>
<br />
<br />
<form asp-action="Delete" style="margin-left:10px">
    <input type="hidden" asp-for="PostId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" style="font-size:20px;">Back to List</a>
</form>
