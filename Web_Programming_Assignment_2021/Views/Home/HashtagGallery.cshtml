@model IEnumerable<Web_Programming_Assignment_2021.Models.Post>
@{ Layout = "_Layout"; }
@{ ViewData["Title"] = "Catstagram"; }


<section class="section site-portfolio">
    <div class="container">
        <div class="row mb-5 align-items-center">
            <div class="col-md-12 col-lg-6 mb-4 mb-lg-0" data-aos="fade-up">
                <h2>Catstagram</h2>
                <p class="mb-0">The best social media!</p>
            </div>
            <br />
            <div class="gallery">
                @foreach (var post in Model)
                {
                    <div class="post">
                        <div class="author">
                            @if (post.User.AvatarFile != null)
                            {
                                <img src="/Catstagram/User/images/avatars/@post.UserId.ToString()/@post.User.AvatarFile" class="author-avatar" alt="">
                            }
                            else
                            {
                                <img src="/Catstagram/User/images/noavatar.png" class="author-avatar" alt="">
                            }
                            <p class="author-nikname">@post.User.Username</p>
                        </div>
                        <hr />
                        <div class="gallery-item" tabindex="0">
                            <a href="/Home/Details/@post.PostId">
                                <img src="/Catstagram/User/images/posts/@post.PostId.ToString()/@post.PhotoFile" class="gallery-image">
                            </a>

                        </div>
                        <hr />
                        <div class="creation-time">Posted on @post.DateCreated</div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
