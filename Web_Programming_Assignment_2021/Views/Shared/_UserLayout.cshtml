                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="scrollbar-sidebar">
                <div class="app-sidebar__inner">
                    <ul class="vertical-nav-menu">
                        <li class="app-sidebar__heading">Wall</li>
                        <li>
                            <a href="/Catstagram" class="mm-active">
                                <i class="metismenu-icon pe-7s-rocket"></i>
                                Wall
                            </a>
                        </li>
                        <li class="app-sidebar__heading">User Page</li>
                        <li>
                            <a href="/Catstagram/Profile">
                                <i class="metismenu-icon pe-7s-network"></i>
                                My Profile
                            </a>
                        </li>
                        <li>
                            <a href="/Catstagram/Posts">
                                <i class="metismenu-icon pe-7s-photo"></i>
                                My Posts
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="app-main__outer">
            <div class="app-main__inner">
                @RenderBody()

            </div>
            <div class="app-wrapper-footer">
                <div class="app-footer">

                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-light custom-navbar">
        <div class="container">
            <a class="navbar-brand" href="/Views/Catstagram/Index.cshtml"></a>
        </div>
    </nav>

    <main id="main">
        @RenderBody()
    </main><!-- End #main -->


    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>


