@if (Model.ErrorMessageVisible)
{
<div class="alert alert-danger" role="alert">
    Not valid (choose original passwor or username)
</div>
}
<form enctype="multipart/form-data">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label asp-for="Username"><b>User Name</b></label>
        <input type="text" placeholder="Enter User Name" asp-for="Username">
        <span asp-validation-for="Username" class="text-danger"></span>

        <label asp-for="Email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password" class="control-label"><b>Password</b></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="ConfirmPassword" class="control-label"><b>Confirm Password</b></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repeat Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <label asp-for="Avatar" class="control-label"><b>Upload Avatar</b></label>
        <input type="file" asp-for="Avatar" class="form-control-file" id="fileUpload" />
        <span asp-validation-for="Avatar" class="text-danger"></span>

        <label asp-for="Status"><b>Status</b></label>
        <textarea type="text" placeholder="Tell something about you" asp-for="Status" style="width:150px"></textarea>
        <span asp-validation-for="Status" class="text-danger"></span>

        <button type="submit" class="registerbtn">Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a asp-action="Login"asp-controller="account">Login</a>.</p>
    </div>
</form>
