@model Web_Programming_Assignment_2021.Models.User

@{ Layout = "_Layout"; }

@{ ViewData["Title"] = "Profile"; }


<div class="profile">

    <div class="profile-image">
        @if (Model.AvatarFile != null)
        {
            <img src="/Catstagram/User/images/avatars/@Model.UserId.ToString()/@Model.AvatarFile" style="height:250px;width:250px">
        }
        else
        {
            <img src="/Catstagram/User/images/noavatar.png" style="height: 250px; width: 250px">
        }

    </div>

    <div class="profile-user-settings">

        <h1 class="profile-user-name">@Model.Username</h1>

        <button class="btn profile-edit-btn" onclick="location.href='Edit';" style="border:1.5px solid #808080;font-size:17px">Edit Profile</button>
        <button class="btn profile-edit-btn" onclick="location.href='Delete';" style="border:1.5px solid #808080;font-size:17px">Delete Profile</button>

    </div>
    <div class="profile-bio">

        <h1 class="profile-user-name">@Model.Email</h1>
        <p><span class="profile-real-name">Status: </span>@Model.Status</p>

    </div>

</div>