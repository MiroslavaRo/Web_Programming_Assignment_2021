@model DeleteViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this? All your posts will be deleted.</h3>
<hr />
    <div class="profile">


        <div class="profile-image">
            @if (Model.ProfileToBeDeleted.AvatarFile != null)
            {
                <img src="/Catstagram/User/images/avatars/@Model.ProfileToBeDeleted.UserId.ToString()/@Model.ProfileToBeDeleted.AvatarFile" style="height:250px;width:250px">
            }
            else
            {
                <img src="/Catstagram/User/images/noavatar.png" style="height: 250px; width: 250px">
            }

        </div>

        <div class="profile-user-settings">

            <h1 class="profile-user-name">@Model.ProfileToBeDeleted.Username</h1>


        </div>
        <div class="profile-bio">

            <h1 class="profile-user-name">@Model.ProfileToBeDeleted.Email</h1>
            <p><span class="profile-real-name">Status: </span>@Model.ProfileToBeDeleted.Status</p>

        </div>

    </div>

    <br />
    <br />
    <form asp-action="Delete" style="margin-left:10px">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Profile" style="font-size:20px;">Back to Profile</a>
    </form>
